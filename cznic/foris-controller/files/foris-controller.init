START=99
STOP=1

USE_PROCD=1
PROG=/usr/bin/foris-controller

start_service() {
	config_load foris-controller
	config_get bus main bus ubus
	config_get backend main backend openwrt
	config_get_bool debug main debug 0

	if [ "$debug" == "1" ]; then
		debug_arg="-d"
	fi

	procd_open_instance
	if [ "$bus" == "ubus" ]; then
		config_get path ubus path "/var/run/ubus.sock"
		config_get_bool single ubus single 0
		if [ "$single" == "1" ]; then
			single_arg="--single"
		fi
		procd_set_param command "$PROG" ${debug_arg:-} -b "$backend" ubus --path "$path" ${single_arg:-}
	elif [ "$bus" == "unix-socket" ]; then
		config_get path unix path "/tmp/foris-controller.soc"
		procd_set_param command "$PROG" ${debug_arg:-} -b "$backend" unix-socket --path "$path"
	fi
	procd_set_param respawn
	procd_close_instance
}
